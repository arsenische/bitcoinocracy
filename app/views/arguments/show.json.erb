<%= JSON.pretty_generate(
{
  id: @argument.id,
  statement: @argument.statement,
  pros: {
    statement: @argument.pro_statement,
    signatures: @argument.pro_signatures.order('signature').map{|s|
      {
      bitcoin_address: s.bitcoin_address.try(:bitcoin_address),
      signature: s.signature
      }
    }
  },
  cons: {
    statement: @argument.con_statement,
    signatures: @argument.con_signatures.order('signature').map{|s|
      {
      bitcoin_address: s.bitcoin_address.bitcoin_address,
      signature: s.signature
      }
    }
  }
}
).html_safe%>
